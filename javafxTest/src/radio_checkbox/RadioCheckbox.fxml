<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox prefHeight="300.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="radio_checkbox.RadioCheckboxController">
   <children>
      <HBox prefHeight="20.0" prefWidth="200.0">
         <children>
            <Label text="이름 : ">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="InName">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="20.0" prefWidth="200.0">
         <children>
            <Label text="성별 : ">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <RadioButton fx:id="male" mnemonicParsing="false" selected="true" text="남자">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <toggleGroup>
                  <ToggleGroup fx:id="gender" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="female" mnemonicParsing="false" selected="true" text="여자" toggleGroup="$gender">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </RadioButton>
         </children>
      </HBox>
      <HBox prefHeight="20.0" prefWidth="200.0">
         <children>
            <Label text="취미: ">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <CheckBox fx:id="travel" mnemonicParsing="false" text="여행">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </CheckBox>
            <CheckBox fx:id="moutain" mnemonicParsing="false" text="등산">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </CheckBox>
            <CheckBox fx:id="reading" mnemonicParsing="false" text="독서">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </CheckBox>
            <CheckBox fx:id="baduk" mnemonicParsing="false" text="바둑">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </CheckBox>
            <CheckBox fx:id="janggi" mnemonicParsing="false" text="장기">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </CheckBox>
            <CheckBox fx:id="game" mnemonicParsing="false" text="게임">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </CheckBox>
            <CheckBox fx:id="tennis" mnemonicParsing="false" text="테니스">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </CheckBox>
            <CheckBox fx:id="mintern" mnemonicParsing="false" text="배드민턴">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </CheckBox>
         </children>
      </HBox>
      <Button fx:id="btnLook" mnemonicParsing="false" onAction="#submit" text="보 기">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Button>
      <TextArea fx:id="OutValue" prefHeight="150.0" prefWidth="550.0">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </TextArea>
   </children>
</VBox>
